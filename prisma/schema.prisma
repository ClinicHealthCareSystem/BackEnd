generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
  active        Boolean       @default(true)
  deleted       Boolean       @default(false)
  
  name          String        
  phone         String        @unique
  CPF           String        @unique
  password      String
  plan          String?
  registration  String?       @unique
  email         String?       @unique
  age           Int?
  address       String?
  blood         String?
  height        String?
  weight        String?
  IMC           String?
  phoneHelp     String?

  agendamento   Agendamento[]
  medicamentos  Medicamento[]
  
  @@map("user")
}

model MedicUser {
  id            String        @id @default(uuid())
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
  active        Boolean       @default(true)
  deleted       Boolean       @default(false)
  
  name          String        
  email         String        @unique
  age           Int?
  CRM           String        @unique
  password      String
  specialty     String
  
  agendamento   Agendamento[]
  medicamentos  Medicamento[]

  @@map("medicUser")
}

model Medicamento {
  id             String    @id @default(uuid())
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  active         Boolean   @default(true)
  deleted        Boolean   @default(false)

  nome           String
  dosagem        String
  vezesAoDia     String
  horarioManha   String?
  horarioTarde   String?
  dataInicio     String
  dataTermino    String
  nomeMedico     String

  medicId        String?
  medico         MedicUser? @relation(fields: [medicId], references: [id])
  usuarioId      String
  usuario        User       @relation(fields: [usuarioId], references: [id])

  @@map("medicamento")
}

model Agendamento {
  id           String           @id @default(uuid())
  type         AgendamentoTipo

  unit         String
  serviceModel String
  serviceDate  String
  serviceTime  String
  
  medicName    String?   
  service      String?   
  medicId      String?
  medico       MedicUser?       @relation(fields: [medicId], references: [id])

  exame        String?   

  usuarioId    String
  usuario      User             @relation(fields: [usuarioId], references: [id])
}

enum AgendamentoTipo {
  consulta
  exame
}