generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoAgendamento {
  CONSULTA
  EXAME
}

enum TipoAtendimento{
  PRESENCIAL
  REMOTO
}

enum StatusAgendamento {
  PENDENTE
  CONFIRMADO
  CANCELADO
}

model User {
  id            String        @id @default(uuid())
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
  active        Boolean       @default(true)
  deleted       Boolean       @default(false)
  
  name          String        
  phone         String        @unique
  CPF           String        @unique
  password      String
  agendamento Agendamento[]
  
  @@map("user")
}

model Agendamento {
  id          String        @id @default(uuid())
  tipo        TipoAgendamento
  data        DateTime      @default(now())
  hora        String
  status      StatusAgendamento @default(PENDENTE)

  usuario_id  String
  unidade_id  String
  convenio_id String

  usuario     User               @relation(fields: [usuario_id], references: [id])
  unidade     Unidade            @relation(fields: [unidade_id], references: [id])
  convenio    Convenio           @relation(fields: [convenio_id], references: [id])
}

model Consulta{
  id          String        @id @default(uuid())
  servico     String
  atendimento TipoAtendimento
  agendamento_id  String    @unique
  agendamento Agendamento   @relation(fields: [agendamento_id], references: [id])
}

model Exame{
  id             String       @id @default(uuid())
  nome           String
  agendamento_id String       @unique
  agendamento    Agendamento  @relation(fields: [agendamento_id], references: [id])
}

model Unidade{
  id          String        @id @default(uuid())
  nome        String        @unique

  agendamento Agendamento[]
}

model Convenio{
  id          String        @id @default(uuid())
  nome        String        @unique

  agendamento Agendamento[]
}